<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table class="table">
  <thead>
    <tr>
      <th>Status</th>
      <th>Total</th>
      <th>Subtotal</th>
      <th>Discount</th>
      <th>Purchase date</th>
      <th>Shipping date</th>
      <th>Product</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.status %></td>
        <td><%= order.total %></td>
        <td><%= order.subtotal %></td>
        <td><%= order.discount %></td>
        <td><%= order.purchase_date %></td>
        <td><%= order.shipping_date %></td>
        <td><%= order.product %></td>
        <td><%= order.user %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

