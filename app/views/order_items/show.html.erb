<h5>Order Item Details</h5>

<table class="table">
  <thead>
    <tr>
      <th>Order #</th>
      <th>SKU#</th>
      <th>Product</th>
      <th>Unit Price</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%#= order_item.order %></td>
      <td><%= @order_item.product.id %></td>
      <td><%= @order_item.product.name %></td>
      <td><%= @order_item.product.price %></td>
      <td><%= @order_item.quantity %></td>
      <td><%= link_to 'Edit', edit_order_item_path(@order_item) %></td>
    </tr>
  </tbody>
</table>


